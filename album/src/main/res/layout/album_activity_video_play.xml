<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Album.MatchParent"
    android:background="@color/albumColorPrimaryBlack">

    <VideoView
        android:id="@+id/video_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/albumTransparent"
        android:fitsSystemWindows="true" />

    <RelativeLayout
        style="@style/Album.MatchParent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            style="@style/Album.AppBar.General.Transparent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/video_bar"
                style="@style/Album.Toolbar.Dark"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                app:navigationIcon="@drawable/album_ic_back_white"
                app:title="@string/album_text_empty" />
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/albumTransparent">

            <RelativeLayout
                android:id="@+id/layout_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/album_shape_finish"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</FrameLayout>
